@using BookStore.Models;
@model IEnumerable<BookModel>
@{
    Layout = "_Layout";
}
<div class="container">
    <h3 class="display-4">Book List</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" height="225" width="100%" src="~/images/books-to-read-2021-Pinterest.jpg" />
                    <div class="card-body">
                        <div class="card-title">@book.Title</div>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/Book/GetBook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted">By @book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

