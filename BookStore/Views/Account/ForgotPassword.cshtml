@model BookStore.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}
<div class="container">
    <p>Forgot Password? No worries you can reset is easily</p>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>If You are registerd with us we have sent an email to your email account to change the password, Check your email</p>
                </div>
            }
            <form asp-action="ForgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send Email" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="LogIn" asp-controller="Account">LogIn</a>
    </div>
</div>



